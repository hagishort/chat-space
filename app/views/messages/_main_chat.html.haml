.chat-main
  .chat-main__group-info
    .chat-main__left
      = @group.name
      .chat-main__menber
        Menberï¼š
        .chat-main__menbername
          - @group.users.each do |user|
            = user.name
    .chat-main__right
      = link_to edit_group_path(@group), class: "chat-main__btn" do
        Edit


  .chat-main__message-list
    = render @messages
 
  
  .chat-main__form
    = form_with model: [@group, @message], html: {class: "chat-main__style"}, local: true do |f|
      .chat-main__message
        = f.text_field :content, class: 'chat-main__comment', placeholder: 'type a message'
        = f.label :image, class: 'chat-main__label' do
          = icon('far', 'image', class: 'fas fa-image')
          = f.file_field :image, class: 'chat-main__input'
      = f.submit 'Send', class: 'chat-main__submit-btn'

